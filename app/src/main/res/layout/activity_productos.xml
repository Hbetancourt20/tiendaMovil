<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <!-- Cabecera con título -->
    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listado de Productos"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <!-- imagen carrito -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="73dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="19dp"
        android:onClick="carritoCompras"
        android:layout_toEndOf="@id/headerTitle"
        android:src="@drawable/carritocompras" />

    <!-- producto 1-->
    <LinearLayout
        android:id="@+id/product1Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/product1Image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mouse" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product1Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mouse gamer"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product1Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio: $10.99"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- producto 2-->
    <LinearLayout
        android:id="@+id/product2Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product1Layout"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/product2Image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/teclado" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product2Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teclado mecánico gamer"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product2Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio: $20.49"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- producto 3-->
    <LinearLayout
        android:id="@+id/product3Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product2Layout"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/product3Image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pad" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product3Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mousepad RGB gamer"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product3Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio: $15.00"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>